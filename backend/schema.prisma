datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-ts"
  output   = "./src/generated"
}

model Tap {
  id        String      @id @default(uuid())
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  user      User     @relation(fields: [userId], references: [id])
  userId    String
  game      Game     @relation(fields: [gameId], references: [id])
  gameId    String
  tapNumber Int
  value     Int
}

model Game {
  id        String   @id @default(uuid())
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  title     String   @db.VarChar(255) @unique
  content   String?
  users     UsersOnGames[]
  taps      Tap[]
}

model Role {
  id       String @id @default(uuid())
  name     String @unique
  users    UsersOnRoles[]
}

model User {
  id       String @id @default(uuid())
  email    String @unique
  username String @unique
  password String
  taps     Tap[]
  games    UsersOnGames[]
  roles    UsersOnRoles[]
}

model UsersOnRoles {
  user       User     @relation(fields: [userId], references: [id])
  userId     String
  role       Role @relation(fields: [roleId], references: [id])
  roleId     String
  assignedAt DateTime @default(now())
  @@id([userId, roleId])
}

model UsersOnGames {
  user       User     @relation(fields: [userId], references: [id])
  userId     String
  game       Game     @relation(fields: [gameId], references: [id])
  gameId     String
  assignedAt DateTime @default(now())
  @@id([userId, gameId])
}
